<%= form_with(model: @order, local: true) do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
    </div>
    <div>
        <%= f.label :address %>
        <%= f.text_field :address %>
    </div>
    <div>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
    </div>
    <div>
        <%= f.label :message %>
        <%= f.text_field :message %>
    </div>
    <div>
        <%= f.label "Profile Photo" %>
        <%= f.file_field :avatar %>
    </div>

    <%= f.submit %>
<% end %>